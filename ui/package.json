    "@reduxjs/toolkit": "^1.7.0",
    "axios": "^0.24.0",
    "framer-motion": "^4",
    "lodash": "^4.17.21",
    "react": "^17.0.2",
    "react-datepicker": "^4.5.0",
    "react-dom": "^17.0.2",
    "react-icons": "^4.3.1",
    "react-redux": "^7.2.6",
    "react-router-dom": "^6.0.2",
    "react-sortable-hoc": "^2.0.0",
    "react-window": "^1.8.6"
  },
  "devDependencies": {
    "@types/node": "^18.11.2",
    "@types/react": "^17.0.50",
    "@types/react-dom": "^18.0.6",
